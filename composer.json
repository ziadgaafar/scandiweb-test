{
  "name": "your-name/scandiweb-test",
  "description": "Scandiweb Junior Developer Test Task",
  "type": "project",
  "require": {
    "php": "^8.1",
    "vlucas/phpdotenv": "^5.5",
    "webonyx/graphql-php": "^15.0",
    "doctrine/dbal": "^3.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs src tests",
    "fix-style": "phpcbf src tests"
  }
}
